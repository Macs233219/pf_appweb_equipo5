<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <filter>
        <filter-name>FiltroAutenticacion</filter-name>
        <filter-class>filtros.FiltroAutenticacion</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroAutenticacion</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>IniciarSesion</servlet-name>
        <servlet-class>controlador.IniciarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerPublicacion</servlet-name>
        <servlet-class>controlador.VerPublicacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormularioRegistro</servlet-name>
        <servlet-class>controlador.FormularioRegistro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registrarse</servlet-name>
        <servlet-class>controlador.Registrarse</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IniciarSesion</servlet-name>
        <url-pattern>/IniciarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerPublicacion</servlet-name>
        <url-pattern>/VerPublicacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormularioRegistro</servlet-name>
        <url-pattern>/FormularioRegistro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registrarse</servlet-name>
        <url-pattern>/Registrarse</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/errors/NotFound.jsp</location>
    </error-page>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
